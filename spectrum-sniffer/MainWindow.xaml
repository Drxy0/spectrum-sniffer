                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Orientation="Horizontal">
                <TextBlock x:Name="Boja0" VerticalAlignment="Center"/>
                <Rectangle Width="50" Height="50" Name="Colour0" HorizontalAlignment="Right" Margin="10">
                    <Rectangle.Fill>
                        <SolidColorBrush/>
